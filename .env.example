# Queska Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# API Configuration
# ===========================================

# Base URL for the Queska API
VITE_API_BASE_URL=http://localhost:3001/api

# API Version (v1, v2, etc.)
VITE_API_VERSION=v1

# ===========================================
# Authentication
# ===========================================

# OAuth providers (if using social login)
VITE_GOOGLE_CLIENT_ID=
VITE_FACEBOOK_APP_ID=

# ===========================================
# Third-Party Services
# ===========================================

# Mapbox (for maps and location features)
VITE_MAPBOX_ACCESS_TOKEN=

# Cloudinary (for image uploads)
VITE_CLOUDINARY_CLOUD_NAME=
VITE_CLOUDINARY_UPLOAD_PRESET=

# Paystack (for payments - Nigeria)
VITE_PAYSTACK_PUBLIC_KEY=

# Flutterwave (alternative payment - Nigeria)
VITE_FLUTTERWAVE_PUBLIC_KEY=

# ===========================================
# Analytics & Monitoring
# ===========================================

# Google Analytics
VITE_GA_TRACKING_ID=

# Sentry (error tracking)
VITE_SENTRY_DSN=

# ===========================================
# Feature Flags
# ===========================================

# Enable/disable features
VITE_ENABLE_AI_CHAT=true
VITE_ENABLE_SOCIAL_LOGIN=false
VITE_ENABLE_PAYMENTS=false
VITE_ENABLE_ANALYTICS=false

# ===========================================
# Environment
# ===========================================

# Current environment (development, staging, production)
VITE_APP_ENV=development

# App version
VITE_APP_VERSION=1.0.0
